<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.echat.arkarcy.laundry.Clothes"
    android:layout_margin="10dp">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/setn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#312d2d"
            android:textSize="15dp"
            android:text="Customer:"/>
        <TextView
            android:id="@+id/clname"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="CustomerName"
            android:textColor="#000000"
            android:layout_alignBaseline="@+id/setn"
            android:layout_alignBottom="@+id/setn"
            android:layout_toRightOf="@+id/setn"/>
        <TextView
            android:id="@+id/seta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#312d2d"
            android:text="Address:"
            android:textSize="15dp"
            android:layout_below="@+id/setn"/>
        <TextView
            android:id="@+id/claddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="CustomerAddress"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/clname"
            android:layout_alignBaseline="@+id/seta"
            android:layout_alignBottom="@+id/seta"
            android:layout_toRightOf="@+id/seta"/>
        <TextView
            android:id="@+id/setp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No:"
            android:textSize="15dp"
            android:textColor="#312d2d"
            android:layout_below="@+id/seta"/>
        <TextView
            android:id="@+id/clphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/claddress"
            android:text="CustomerPhone"
            android:layout_alignBaseline="@+id/setp"
            android:layout_alignBottom="@+id/setp"
            android:layout_toRightOf="@+id/setp"/>
        <TextView
            android:id="@+id/setd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining cloths to deliver:"
            android:textSize="15dp"
            android:textColor="#312d2d"
            android:layout_below="@+id/setp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total:"/>
        <TextView
            android:id="@+id/clremaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/setd"
            android:text=""
            android:layout_alignBaseline="@+id/setd"
            android:layout_alignBottom="@+id/setd"
            android:layout_toRightOf="@+id/setd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal:"/>
            <TextView
                android:id="@+id/clnormalr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_below="@+id/setd"
                android:text=""
                android:layout_alignBaseline="@+id/setd"
                android:layout_alignBottom="@+id/setd"
                android:layout_toRightOf="@+id/setd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heavy:"/>
            <TextView
                android:id="@+id/clheavyr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_below="@+id/setd"
                android:text=""
                android:layout_alignBaseline="@+id/setd"
                android:layout_alignBottom="@+id/setd"
                android:layout_toRightOf="@+id/setd"/>
        </LinearLayout>

        <Button
            android:id="@+id/bpickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PICKUP Clothes" />

        <Button
            android:id="@+id/bdeliverd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivered Cloths" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Remaining Amount :"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/clamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/breceiveamount"
            android:text="RECEIVED AMOUNT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Received Amount :"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/clramount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bshowrecord"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Show PickUp \nRecord" />

            <Button
                android:id="@+id/bdeliverdrecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show Delivered \nRecord" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</RelativeLayout>
